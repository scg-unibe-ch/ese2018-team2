{
  "name": "frontend",
  "version": "0.0.1",
  "main": "server/index.ts",
  "license": "MIT",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/components"
    ],
    "modulePathIgnorePatterns": [
      "/.next/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/test/setupEnzyme.ts"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "test": "jest",
    "start": "next start",
    "codegen:generate": "apollo codegen:generate --schema=../backend/schema.graphql --addTypename --target=typescript __generated__",
    "codegen:watch": "chokidar \"**/*.tsx\" -c \"yarn run codegen:generate\""
  },
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "apollo-boost": "^0.1.16",
    "express": "^4.16.4",
    "file-loader": "^2.0.0",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "immutable": "^4.0.0-rc.12",
    "next": "^7.0.2",
    "next-with-apollo": "^3.2.0",
    "nprogress": "^0.2.0",
    "react": "^16.5.2",
    "react-apollo": "^2.2.4",
    "react-dom": "^16.5.2",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.82.5",
    "slate": "^0.44.7",
    "slate-react": "^0.21.13",
    "url-loader": "^1.1.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.10",
    "@types/next": "^7.0.2",
    "@types/nprogress": "^0.0.29",
    "@types/react": "^16.4.16",
    "@types/react-dom": "^16.0.9",
    "apollo": "^1.9.2",
    "chokidar-cli": "^1.2.1",
    "concurrently": "^4.0.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "jest-enzyme": "^7.0.1",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.4",
    "prettier": "1.14.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.3"
  }
}
